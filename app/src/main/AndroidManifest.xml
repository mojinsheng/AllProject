<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.from.start">

    <application
        android:name="com.from.start.app.CarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.from.start.ui.activity.LoginActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.from.start.ui.activity.MainActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"

            android:fitsSystemWindows="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.from.start.ui.activity.IPActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"

            android:fitsSystemWindows="true"
            android:screenOrientation="portrait" />
        <activity
        android:name="com.from.start.ui.activity.WifiActivity"
        android:windowSoftInputMode="adjustUnspecified|stateHidden"

        android:fitsSystemWindows="true"
        android:screenOrientation="portrait" />
        <activity
            android:name="com.from.start.ui.activity.AboutActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"

            android:fitsSystemWindows="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.from.start.ui.activity.SearchActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"

            android:fitsSystemWindows="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.from.start.ui.activity.MessageAppActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"

            android:fitsSystemWindows="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.from.start.ui.activity.SettingActicity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"

            android:fitsSystemWindows="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.from.start.ui.activity.PersonActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"

            android:fitsSystemWindows="true"
            android:screenOrientation="portrait" />

        <receiver android:name="com.from.start.ui.widget.RecyclerWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

    </application>

</manifest>